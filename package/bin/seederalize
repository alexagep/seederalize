#!/usr/bin/env node
'use strict';


const { argv } = require("../utils/argv");

const argument = process.argv.splice(2)

const version = ['--version', '-v']

const config = require('../config/config');


if (version.includes(argument[0])) {
    require('../utils/utils').packageVersion()
} else if (argument[0] === '--help') {
    require('../utils/utils').showingHelp()
} else {
    require('../src/server').createFile(config)
}

